---
import { Picture, Image } from "astro:assets";

const { url, name } = Astro.props;

---

<li class="inline-block group">
    <div class="flex items-center bg-white dark:bg-slate-900 shadow border-4 border-double border-gray-100 dark:border-gray-800 py-1.5 px-4 rounded-full align-middle duration-500
        group-hover:text-indigo-600
        group-hover:shadow-md
        group-hover:dark:shadow-gray-800
        group-hover:border-indigo-600/30
        group-hover:dark:border-indigo-600/50">
        <Picture class="size-3 me-2 grayscale group-hover:grayscale-0 transition-all duration-300" src={url} alt={name} />
        <span class="text-[18px] font-medium">{name}</span>
    </div>
</li>


