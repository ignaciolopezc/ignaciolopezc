---
import { Picture } from 'astro:assets';

// filepath: src/components/ui/Tech.astro
import astro from "src/assets/icons/astro.svg"
import html from "src/assets/icons/html5.svg"
import css from "src/assets/icons/css3.svg"
import js from "src/assets/icons/javascript.svg"
import github from "src/assets/icons/github-light.svg"
import git from "src/assets/icons/git.svg"
import react from "src/assets/icons/reactjs.svg"
import tailwindcss from "src/assets/icons/tailwindcss.svg"
import copilot from "src/assets/icons/copilot.svg"
import githubcopilot from "src/assets/icons/github-copilot.svg"
import openai from "src/assets/icons/openai.svg"
import nodejs from "src/assets/icons/nodejs.svg"
import markdown from "src/assets/icons/markdown.svg"
import npm from "src/assets/icons/npm.svg"
import python from "src/assets/icons/python.svg"
import vite from "src/assets/icons/vitejs.svg"
import automation from "src/assets/icons/AA360.png"
import powerautomate from "src/assets/icons/pp.svg"
import uipath from "src/assets/icons/uipath.png"
import vscode from "src/assets/icons/vscode.svg"
import firefox from "src/assets/icons/firefox.svg"
import postmann from "src/assets/icons/postman.svg"
import jira from "src/assets/icons/jira.svg"
import notion from "src/assets/icons/notion.svg"
import linkedin from "src/assets/icons/linkedin.svg"
import sql from "src/assets/icons/sqlserver.svg"
import postgres from "src/assets/icons/postgresql.svg"
import mongodb from "@assets/icons/mongodb.svg"
import mysql from "@assets/icons/mysql.svg";

const lenguajes = [
  { url: astro, name: "Astro JS" },
  { url: html, name: "HTML5" },
  { url: css, name: "CSS" },
  { url: js, name: "JavaScript" },
  { url: github, name: "Github" },
  { url: git, name: "Git" },
  { url: react, name: "React" },
  { url: tailwindcss, name: "Tailwind CSS" },
  { url: copilot, name: "Copilot" },
  { url: githubcopilot, name: "Github Copilot" },
  { url: openai, name: "OpenAI" },
  { url: nodejs, name: "Node.js" },
  { url: markdown, name: "Markdown" },
  { url: npm, name: "NPM" },
  { url: python, name: "Python" },
  { url: vite, name: "Vite" },
  { url: automation, name: "Automation" },
  { url: powerautomate, name: "Power Automate" },
  { url: uipath, name: "UIPath" },
  { url: vscode, name: "VSCode" },
  { url: firefox, name: "Firefox" },
  { url: postmann, name: "Postman" },
  { url: jira, name: "Jira" },
  { url: notion, name: "Notion" },
  { url: linkedin, name: "LinkedIn" },
  { url: sql, name: "SQL Server" },
  { url: postgres, name: "PostgreSQL" },
  { url: mongodb, name: "MongoDB" },
  { url: mysql, name: "MySQL" }
];

---


<section id="tech" class="relative md:py-24 py-16">
    <div class="absolute inset-0 bg-[url('')] bg-bottom bg-no-repeat bg-cover"></div>
    <div class="container relative">
        
        <div class="grid grid-cols-1 pb-2 text-center">
            <h6 class="text-indigo-600 text-sm font-bold uppercase mb-2">Tech</h6>
            <h3 class="mb-4 md:text-3xl md:leading-normal text-2xl leading-normal font-semibold">Herramientas y Tecnologia</h3>

            <p class="text-slate-400 max-w-2xl mx-auto">A lo largo de mi carrera como consultor he acumulado algo de experiencia con las siguientes herramientas, lenguajes y tecnologias.</p>
        </div>
    

        <div class="flex justify-center items-center text-center mt-8">
            <ul class="list-none space-x-3 space-y-4">
                {lenguajes.map(l => (

                    <li class="inline-block group">
                        <div class="group flex items-center bg-white dark:bg-slate-900 hover:text-indigo-600 shadow hover:shadow-md dark:shadow-gray-800 hover:dark:shadow-gray-800 border-4 border-double border-gray-100 hover:border-indigo-600/30 dark:border-gray-800 hover:dark:border-indigo-600/50 py-1.5 px-4 rounded-full align-middle duration-300
                            [filter:grayscale(50%)] group-hover:[filter:grayscale(0%)]
                            group-hover:shadow-md
                            group-hover:dark:shadow-gray-800
                            group-hover:border-indigo-600/30
                            group-hover:dark:border-indigo-600/50
                            transition-all">
                            <Picture class="size-3 me-2 transition-all duration-300" src={l.url} alt={l.name} />
                            <span class="text-[18px] font-medium">{l.name}</span>
                        </div>
                    </li>

                ))}
            </ul>
        </div>
    </div>
</section>