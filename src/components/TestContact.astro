---
import ModalSuccess from "@components/ui/ModalSuccess2.astro"
import ModalError from '@components/ui/ModalError.astro';
---


<div class="bg-gray-50 p-8">
  <div class="max-w-md mx-auto">
    <h1 class="text-2xl font-bold mb-6">Contact Form Modal Examples</h1>
    
    <!-- Example Contact Form -->
    <form class="space-y-4 bg-white p-6 rounded-lg shadow">

      

      
      <div class="flex gap-3">
        <button
          type="button"
          onclick="showSuccessModal()"
          class="flex-1 bg-green-600 text-white py-2 px-4 rounded-md hover:bg-green-700 transition-colors duration-200"
        >
          Simulate Success
        </button>
        
        <button
          type="button"
          onclick="showErrorModal()"
          class="flex-1 bg-red-600 text-white py-2 px-4 rounded-md hover:bg-red-700 transition-colors duration-200"
        >
          Simulate Error
        </button>
      </div>
    </form>
  </div>
  
  <!-- Success Modal -->
  <ModalSuccess />
  
  <!-- Error Modal -->
  <ModalError />
</div>

